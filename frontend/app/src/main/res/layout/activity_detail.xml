<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meeting_indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/meeting_info"
        app:layout_constraintVertical_weight="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meeting_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/meeting_indicator"
        app:layout_constraintBottom_toTopOf="@id/meeting_button_group"
        app:layout_constraintVertical_weight="0.3"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meeting_button_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/meeting_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>