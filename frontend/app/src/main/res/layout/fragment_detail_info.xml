<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailInfoFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/meeting_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/meeting_viewpager"
        app:layout_constraintVertical_weight="0.3" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/meeting_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/meeting_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>